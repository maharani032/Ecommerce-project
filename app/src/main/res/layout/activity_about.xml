<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/navbar"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/goback"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:backgroundTint="#FF000000"
            android:background="@drawable/ic_baseline_arrow_back_ios_new_24"
            android:contentDescription="go back"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/navbar"
        android:id="@+id/layout">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgTeam"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#196DE8"
            android:background="@drawable/ic_people_group_solid" />

        <TextView
            android:id="@+id/teamView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEAM MEMBER 4"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginVertical="20dp"/>

        <TextView
            android:id="@+id/classView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KAMPUS MERDEKA HACKTIV8"
            android:textSize="19sp"
            android:layout_marginVertical="10dp"
            android:textAlignment="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Contact Us: "
            android:textAlignment="center"
            android:textSize="17sp"
            />

        <LinearLayout
            android:id="@+id/layoutSocialMedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/instagram"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/ic_instagram" />

            <ImageView
                android:id="@+id/linkedin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/ic_linkedin" />

            <ImageView
                android:id="@+id/github"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/ic_github" />

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/ic_facebook" />

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/ic_twitter" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>