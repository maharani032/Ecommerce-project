<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.ui.SettingsFragment"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profil_image"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_username"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_baseline_account_circle_24"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />
        <TextView
            android:id="@+id/emailId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="email"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textAllCaps="true"
            />

    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/profil_image"/>
    <LinearLayout
        android:id="@+id/Informasi"
        android:layout_below="@id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp">

        <ImageView
            android:id="@+id/iconInfo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:src="@drawable/ic_baseline_info_24"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="128dp" />

        <TextView
            android:id="@+id/infotext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:text="Informasi"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textAllCaps="true"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/SignOutLayout"
        android:layout_below="@id/Informasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp">


        <ImageView
            android:id="@+id/SignOutIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:src="@drawable/ic_baseline_login_24"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="128dp" />

        <TextView
            android:id="@+id/SignOutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:text="Log Out"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textAllCaps="true"/>
    </LinearLayout>

</RelativeLayout>